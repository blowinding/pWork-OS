    "date-fns": "^3.6.0",
    "glob": "^10.4.2",
    "gray-matter": "^4.0.3",
    "inquirer": "^9.2.23",
    "marked": "^17.0.1",
    "puppeteer": "^24.35.0",
    "reveal-md": "^6.1.3",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.9",
