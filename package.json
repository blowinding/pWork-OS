{
  "name": "pwork-os",
  "version": "0.1.0",
  "description": "Personal Work Operating System - A Git-first work management system",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pwork": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
